
@model User
@{

    ViewData["Title"] = "View";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Libaray.styles.css" asp-append-version="true" />
<div class="flex-column h-100 w-100 align-items-center justify-content-center d-flex">
    <div class="d-flex flex-column align-items-center justify-content-center  bg-white w-50 h-50 p-5 border rounded-3">
        <div class="fs-5">Registration</div>
        <div class="w-100">
            <form method="post" asp-action="Registration" asp-controller="Auth">
                <div class="d-flex flex-column justify-content-center align-items-center gap-2 w-100">
                    <div class="d-flex flex-column gap-2 w-75">
                        <label for="userName">User Name</label>
                        <input asp-for="Username" />
                    </div>
                    <div class="d-flex flex-column gap-2 w-75">
                        <label for="email">Email</label>
                        <input asp-for="Email" />
                    </div>
                    <div class="d-flex flex-column gap-2 w-75">
                        <label for="password">password</label>
                        <input asp-for="Password" />
                    </div>
                    <button type="submit" class="px-5 py-2 m-0 w-75 border-0 rounded-3 hover:">Registration</button>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                </div>
            </form>
        </div>
        
    </div>
</div>

